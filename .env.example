# Paste69 Environment Variables
# Copy this file to .env and modify as needed

# Debugging
0X_LOG_LEVEL=info

# Database Configuration
0X_DATABASE_DRIVER=sqlite
0X_DATABASE_HOST=localhost
0X_DATABASE_PORT=5432
0X_DATABASE_USER=
0X_DATABASE_PASSWORD=
0X_DATABASE_NAME=paste69.db
0X_DATABASE_SSLMODE=disable

# Storage Configuration
# Multiple storage backends can be configured (0-9)
0X_STORAGE_0_NAME=local
0X_STORAGE_0_TYPE=local
0X_STORAGE_0_DEFAULT=true
0X_STORAGE_0_PATH=./uploads

# S3 Storage Example (uncomment and configure as needed)
# 0X_STORAGE_1_NAME=s3storage
# 0X_STORAGE_1_TYPE=s3
# 0X_STORAGE_1_DEFAULT=false
# 0X_STORAGE_1_S3_BUCKET=your-bucket-name
# 0X_STORAGE_1_S3_REGION=us-east-1
# 0X_STORAGE_1_S3_KEY=your-access-key
# 0X_STORAGE_1_S3_SECRET=your-secret-key
# 0X_STORAGE_1_S3_ENDPOINT=https://s3.amazonaws.com

# Server Configuration
0X_SERVER_ADDRESS=:3000
0X_SERVER_BASE_URL=http://localhost:3000
0X_SERVER_MAX_UPLOAD_SIZE=5242880
0X_SERVER_DEFAULT_UPLOAD_SIZE=10485760
0X_SERVER_API_UPLOAD_SIZE=52428800
0X_SERVER_PREFORK=false
0X_SERVER_SERVER_HEADER=Paste69
0X_SERVER_APP_NAME=Paste69
0X_SERVER_CORS_ORIGINS=*
0X_SERVER_VIEWS_DIRECTORY=./views
0X_SERVER_PUBLIC_DIRECTORY=./public

# Cleanup Configuration
0X_SERVER_CLEANUP_ENABLED=true
0X_SERVER_CLEANUP_INTERVAL=3600
0X_SERVER_CLEANUP_MAX_AGE=168h

# Rate Limiting Configuration
0X_SERVER_RATE_LIMIT_GLOBAL_ENABLED=true
0X_SERVER_RATE_LIMIT_GLOBAL_RATE=6969.0
0X_SERVER_RATE_LIMIT_GLOBAL_BURST=250
0X_SERVER_RATE_LIMIT_PER_IP_ENABLED=true
0X_SERVER_RATE_LIMIT_PER_IP_RATE=2.0
0X_SERVER_RATE_LIMIT_PER_IP_BURST=5
0X_SERVER_RATE_LIMIT_USE_REDIS=false
0X_SERVER_RATE_LIMIT_IP_CLEANUP_INTERVAL=1h

# SMTP Configuration
0X_SMTP_ENABLED=false
0X_SMTP_HOST=localhost
0X_SMTP_PORT=587
0X_SMTP_USERNAME=
0X_SMTP_PASSWORD=
0X_SMTP_FROM=
0X_SMTP_FROM_NAME=Paste69
0X_SMTP_STARTTLS=true
0X_SMTP_TLS_VERIFY=true

# Redis Configuration
0X_REDIS_ENABLED=false
0X_REDIS_ADDRESS=localhost:6379
0X_REDIS_PASSWORD=
0X_REDIS_DB=0

# Retention Configuration
0X_RETENTION_NO_KEY_MIN_AGE=7.0
0X_RETENTION_NO_KEY_MAX_AGE=128.0
0X_RETENTION_WITH_KEY_MIN_AGE=30.0
0X_RETENTION_WITH_KEY_MAX_AGE=730.0
0X_RETENTION_POINTS=50
